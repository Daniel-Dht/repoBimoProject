 <div class="bs-example">
    <nav id="myNavbar" class="navbar navbar-default" role="navigation" >
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" >
                    <span class="sr-only" style="color: blue;">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Platform Bimo</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('home')}}">Accueil</a></li>
                    
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown" class="dropdown-toggle">Patient <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{path('addPatient') }}">Ajouter un patient</a></li>
                            <li><a href="{{path('listPatientAtCharge') }}">Patients à charge</a></li>
                            <li class="divider"></li>
                            <li><a href="{{ path('listPatient') }}">Liste de patient</a></li>    
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown" class="dropdown-toggle">Bimo <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('urgentListBimo') }}"><i class="glyphicon glyphicon-alert"></i> Dossier urgents</a></li>
                            <li><a href="{{path('listPatientAtCharge') }}">Patients à charge</a></li>
                            <li class="divider"></li>
                            <li><a href="{{ path('listBimo') }}">Derniers BIMO remplis</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                  {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown" class="dropdown-toggle">Admin <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('listUser') }}">Gestion du personnel</a></li>
                            <li><a href="{{ path('addUser') }}">Ajouter un utilisateur</a></li>
                            <li class="divider"></li>
                            <li><a href="#">Settings</a></li>
                        </ul>
                    </li>
                  {% endif %}
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                      <li><a href="{{ path('viewUser', {'id': app.user.id }) }}">{{ app.user.username }} - Profile</a></li>
                      <li><a href="{{ path('logout') }}">Logout</a></li>
                    {% else %}
                      <li><a href="{{ path('login') }}">Login</a></li>
                      <li><a href="{{ path('register') }}">Register</a></li>
                    {% endif %}
                </ul>
              
            </div><!-- /.navbar-collapse -->
        </div>
    </nav>
</div>


