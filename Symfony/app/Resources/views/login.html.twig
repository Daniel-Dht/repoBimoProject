{# src/OC/UserBundle/Resources/views/Security/login.html.twig #}

{% extends "layout.html.twig" %}

{% block body %}

  {# S'il y a une erreur, on l'affiche dans un joli cadre #}
  {% if error %}
    <div class="alert alert-danger">{{ error.message }}</div>
  {% endif %}

 <div class="well">
  <legend style="text-align: center;">Espace de connexion</legend>
  {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
  
    <form class='form-horizontal' action="{{ path('login_check') }}" method="post">
      <div class="form-group">    
        <label class='col-sm-3 control-label' for="username">Login :</label>
        <div class="col-sm-4">
          <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
        </div>
      </div>
      <div class="form-group">
        <label class ='col-sm-3 control-label' for="password">Mot de passe :</label>
        <div class="col-sm-4">
          <input class="form-control" type="password" id="password" name="_password" />
        </div>
      </div>

        <br />
      <div class="form-group">
        <label class ='col-sm-3 control-label' ></label>
        <div class="col-sm-4">
          <input class='btn btn-success' type="submit" value="Connexion" />
        </div>
      </div>
      
    </form>
  </div>

{% endblock %}