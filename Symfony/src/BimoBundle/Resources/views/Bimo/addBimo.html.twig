{% extends 'layout.html.twig' %}


{% block title %}
  Ajouter un Bimo - {{ parent() }}
{% endblock %}

{% block body %}

	{% if is_granted('ROLE_ADMIN') %}

		{% if patient is defined and patient is not empty %}
			<a href="{{ path('viewPatient', {'id': patient.id }) }}" class="btn btn-primary">
		      <i class="glyphicon glyphicon-chevron-left"></i>
		      Retour au profil de {{patient.prenom}} {{patient.nom}}
		    </a>
		    <hr/>

		    {{ include("BimoBundle:Bimo:formBimoPatient.html.twig") }}
		{% else %}
			{{ include("BimoBundle:Bimo:formBimo.html.twig") }}
		{% endif %}

	{% else %}
		<p> Vous ne disposez pas des droits necessaires <p>
	{% endif %}


	

   
{% endblock %}
