{% extends 'layout.html.twig' %}

{% block body %}

	<p>
		Bonjour {{ app.user.username }} 
	</p>


	<form method="post" action="Traitement_id_malade.php">
		<p> Veuillez entrer l'identifiant du patient :</p> 

		<input type="text" id="recherche" name="id_malade"/>

	</form>

	<h2>Ajouter un patient</h2>

  	{{ include("BimoBundle:Patient:formPatient.html.twig") }}

	<script>
		var liste = Array();
		{% for patient in listPatient %}

			liste.push("{{ patient.prenom }} ");

		{% endfor %}

		$('#recherche').autocomplete({   //  id=  "bimobundle_medproto_nomBefore"
			source : liste,
			minLength : 4
		});

	</script>
   
{% endblock %}
